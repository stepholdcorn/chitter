<% if current_user %>
	<div id="new-cheep">
		<form action="/cheeps" method="post">
			<input type="text" name="content" placeholder="What's happening?">
			<% created_at = Time.now %>
			<input type="submit" class ="btn btn-primary" value="Cheep">
		</form>
	</div>
<% end %>


<div class="jumbotron">
	<ul>
		<% @cheeps.each do |cheep| %>
			<li>
				<div class="username"><%= cheep.user.name %>&nbsp;&nbsp;</div> 
				<div class="handle"><%= cheep.user.handle %>&nbsp;&nbsp;</div>
				<div class="timestamp">
					<%= cheep.created_at.strftime '%a' %> at <%= cheep.created_at.strftime '%l.%M%P' %>
				</div>
				<div class="content"><%= cheep.content %></p></div>
			</li>
		<% end %>
	</ul>
</div>